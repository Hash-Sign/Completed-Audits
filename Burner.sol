// File contracts/Burner.sol

pragma solidity >=0.6.0;




contract Burner is Ownable {
	using SafeMath for uint256;

	address[] public assets;

	address constant UniswapRouterAddress = 0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff;

	IUniswapV2Router02 constant uni = IUniswapV2Router02(0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff);

	uint256 constant MAX_INT = 2**256 - 1;

	address constant usdc = 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174;
	address constant wmatic = 0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270;

	address public booty;

	uint256 public slippageBp;

	uint256 public nextBurnBlock;

	// map asset to paths
	mapping(address => address[]) public paths;

	constructor(address _booty, uint256 _slippageBp) public {
		booty = _booty;
		slippageBp = _slippageBp;
		nextBurnBlock = block.timestamp;
	}
    
	function burn() external {
		require(block.timestamp >= nextBurnBlock, "burn: not time for next burn");
		for (uint256 i = 0; i < assets.length; i++) {
			_burnAsset(assets[i]);
		}
		nextBurnBlock = block.timestamp + 21600; // 21600 is 12hrs @ 2 blocks/s
	}

	function _burnAsset(address asset) internal {
		address[] memory path = getPath(asset);
		// transfer into swap pool
		uint256 amountIn = IERC20(asset).balanceOf(address(this));
		if(amountIn > 0) {
			uint256 amountOutMin = getAmountOut(amountIn, path);
			// safe transfer under hood
			uni.swapExactTokensForTokens(
				amountIn, 
				amountOutMin, 
				path, 
				address(this), 
				block.timestamp + 500);
		}
	}

	function burnAsset(address asset) external onlyOwner {
		_burnAsset(asset);
	}

	function getPath(address asset) internal view returns (address[] memory) {
		if(paths[asset].length > 0) {
			return paths[asset];
		} else if(asset == usdc) {
			// Route in the usdc pool
			address[] memory path = new address[](2);
			path[0] = usdc;
			path[1] = booty;
			return path;
		} else if (asset == wmatic) {
			// Route via weth to the usdc pool
			address[] memory path = new address[](3);
			path[0] = wmatic;
			path[1] = usdc;
			path[2] = booty;
			return path;
		} else {
			// Route asset via wmatic to the usdc pool
			address[] memory path = new address[](4);
			path[0] = asset;
			path[1] = wmatic;
			path[2] = usdc;
			path[3] = booty;
			return path;
		}
	}

	function addAsset(address asset) external onlyOwner {
		assets.push(asset);
		require(IERC20(asset).approve(UniswapRouterAddress, MAX_INT), "addAsset: approve failed");
	}

	function approve(address asset) external onlyOwner {
		IERC20(asset).approve(UniswapRouterAddress, MAX_INT);
	}

	function getAmountOut(uint256 amountIn, address[] memory path) internal view returns (uint256) {
        uint256 out = uni.getAmountsOut(amountIn, path)[1];
        return out.mul(slippageBp).div(10000);
	}

	function setSlippageBp(uint256 _slippageBp) external onlyOwner {
		slippageBp = _slippageBp;
	}

	function addPath(address asset, address[] calldata path) external onlyOwner {
		paths[asset] = path;
	}

}
